// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Game {
  id        String @id  @default(uuid())// @id vai pegar esse id como chave primaria da tabela
  title     String
  bannerUrl String

  ads        Ad[]// No banco de dados não vai existir um campp ads, o Prisma cria somente para saber que ele existe
}

model Ad {
  id              String   @id @default(uuid()) // Usando gerador UUID para gerar um id padrão 
  gameId          String
  name            String
  yearsPlaying    Int
  discord         String
  weekDays        String
  hourStart       Int
  hourEnd         Int
  useVoiceChannel Boolean
  createdAt       DateTime @default(now()) // @default vai salvar por padrão o momento atual que o registro for criado

  game Game @relation(fields: [gameId], references: [id]) // Relação da tabela Ad com Game, para varios anuncios em cada jogo
}
