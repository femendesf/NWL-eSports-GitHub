// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Game{

  id  String @id // @id vai pegar esse id como chave primaria da tabela
  title String
  bannerUrl String

}

model Ad{
  
  id String @id
  name String
  yearsPlaying Int
  discord String
  weekDays String
  hourStart Int
  hourEnd Int
  useVoiceChannel Boolean
  createdAt DateTime @default(now()) // @default vai salvar por padr√£o o momento atual que o registro for criado

}

